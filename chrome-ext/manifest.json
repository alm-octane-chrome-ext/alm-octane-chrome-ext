{
  "manifest_version": 2,
  "name": "ALM Octane Chrome Extension",
  "short_name": "AlmOctaneExt",
  "description": "ALM Octane Chrome Extension",
  "version": "1.0.0",
  "browser_action": {
    "default_title": "ALM Octane Chrome Extension",
    "default_icon": "img/icon96.png",
    "default_popup": "popup/alm-octane-ext-popup.html"
  },
  "icons": {
    "48": "img/icon48.png",
    "96": "img/icon96.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background/alm-octane-ext-background.js"
    ],
    "persistent": false
  },
  "content_scripts": [],
  "web_accessible_resources": [
    "img/skype.png"
  ]
}
